<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/text_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/scan_kuwei"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimens_10"
            android:src="@mipmap/ico_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_left"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimens_120"
                android:layout_height="@dimen/dimens_120"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimens_54"
                android:src="@mipmap/scan" />

            <TextView
                android:id="@+id/tv_scan_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimens_66"
                android:text="扫描库位二维码"
                android:textSize="@dimen/text_20" />

            <EditText
                android:id="@+id/et_hint"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/demins_80"
                android:background="@drawable/shap_rectangle"
                android:gravity="center_vertical"
                android:hint="或输入库位号"
                android:paddingLeft="@dimen/dimens_5"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor2"
                android:textSize="@dimen/text_14" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_20"
                android:gravity="center">

                <TextView
                    android:id="@+id/click_btn_cancel"
                    style="@style/btnStyle"
                    android:background="@drawable/select_btn_red"
                    android:text="@string/cancel" />

                <TextView
                    android:id="@+id/click_btn_confirm"
                    style="@style/btnStyle"
                    android:layout_marginLeft="@dimen/dimens_30"
                    android:background="@drawable/select_btn_blue"
                    android:text="@string/complain" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>